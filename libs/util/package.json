{
    "name": "@adit/core-util",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly --declaration -p tsconfig.lib.json",
        "build:min": "esbuild src/index.ts --bundle --minify --platform=node --outfile=dist/index.js",
        "build": "rm -rf dist && npm run build:types && npm run build:min"
    },
    "dependencies": {
        "uid": "^2.0.0",
        "uuid": "^9.0.0"
    }
}