{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2024",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@adit/lib/adit": [
        "libs/adit/src"
      ],
      "@adit/lib/adit/*": [
        "libs/adit/src/*"
      ],
      "@adit/core/clickhouse": [
        "libs/clickhouse/src"
      ],
      "@adit/core/clickhouse/*": [
        "libs/clickhouse/src/*"
      ],
      "@adit/core/common": [
        "libs/common/src"
      ],
      "@adit/core/common/*": [
        "libs/common/src/*"
      ],
      "@adit/core/decorators": [
        "libs/decorators/src"
      ],
      "@adit/core/decorators/*": [
        "libs/decorators/src/*"
      ],
      "@adit/core/event": [
        "libs/event/src"
      ],
      "@adit/core/event/*": [
        "libs/event/src/*"
      ],
      "@adit/core/method-registry": [
        "libs/method-registry/src"
      ],
      "@adit/core/method-registry/*": [
        "libs/method-registry/src/*"
      ],
      "@adit/core/postgre": [
        "libs/postgre/src"
      ],
      "@adit/core/postgre/*": [
        "libs/postgre/src/*"
      ],
      "@adit/core/pulsar": [
        "libs/pulsar/src"
      ],
      "@adit/core/pulsar/*": [
        "libs/pulsar/src/*"
      ],
      "@adit/core/util": [
        "libs/util/src"
      ],
      "@adit/core/util/*": [
        "libs/util/src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}